<Window x:Class="BackupTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackupTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="srcfolder">Source Folder</TextBox>
        <TextBox x:Name="targetfolder">Target Folder</TextBox>
        <Button x:Name="copyButton" Margin="10" Width="100">
            Test
        </Button>
    </StackPanel>
</Window>
